.share{
  display: flex;
  flex-direction: column;
  width:100%;
  height:100%;
  background:#f7f7f7;
}
/*  赏金红包  */
.share .money-reward{
  margin:0 auto;
  display:flex;
  justify-content: space-between;
  align-items: center;
  width:690rpx;
  height:90rpx;
  margin-top:30rpx;
  border-radius: 8rpx;
  background:#fff;
}
.share .money-reward .per-sum-name{
  margin-left:30rpx;
  font-size:30rpx;
  color: #2b2b2b;
}
.share .money-reward .per-sum-input{
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.share .money-reward .per-sum-input input{
  width:140rpx;
  height:88rpx;
  font-size:30rpx;
  text-align: right;
}
.share .money-reward .per-sum-input text{
  margin-right:30rpx;
  margin-left:20rpx;
  font-size:32rpx;
  color:#2b2b2b;
}
/*  tip-1  */
.tip-1{
  margin:0 auto;
  width:634rpx;
  margin-top:10rpx;
  font-size:24rpx;
  color: #dcdcdc;
}
/* tip-2  */
.tip-2{
  position:fixed;
  left:50%;
  bottom:185rpx;
  transform: translateX(-50%);
  width:634rpx;
  font-size:24rpx;
  color: #7c7c7c;
}
.money-reward-all{
  position:fixed;
  bottom:132rpx;
  left:50%;
  transform: translateX(-50%);
  width:634rpx;
  font-size:24rpx;
  color: #ee4126;
}
/*  发红包按钮  */
.submit-btn{
  position:fixed;
  bottom:0;
  left:0;
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height:88rpx;
  font-size:36rpx;
  color:#fff;
  background:#ee4126;
}
/*  发送渠道选择  */
.send-way{
  position:fixed;
  left:0;
  bottom:0;
  display:flex;
  flex-direction:column;
  align-items: center;
  width:100%;
  height:400rpx;
  background:#f9f9f9;
  z-index:3004;
}
.send-way .send-way-title{
  width:100%;
  margin-top:23rpx;
  text-align:center;
  font-size:30rpx;
  color: #2b2b2b;
}

.send-way .send-way-content{
  display:flex;
  justify-content: space-around;
  align-items:center;
  width:100%;
  height:150rpx;
  margin-top:40rpx;
  font-size:26rpx;
  color: #7c7c7c;
}
.send-way .send-way-content image{
  width:100rpx;
  height:100rpx;
}
.send-way .send-way-content .way{
  display:flex;
  flex-direction:column;
  align-items: center;
  justify-content: space-between;
  width:33%;
  height:100%;
}
.send-way .cancel-btn{
  position:absolute;
  left:0;
  bottom:0;
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height: 92rpx;
  font-size:34rpx;
  color: #333839;
  border-top:#ccc 1rpx solid;
}
/*  分享给好友的按钮  */
.share-btn{
  position:fixed;
  top:35%;
  left:50%;
  transform: translate(-50%,-50%);
  width:522rpx;
  height:320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#fff;
  border-radius:6rpx;
  z-index:3004;
}
.share-btn .title{
  margin-top:20rpx;
  font-weight: bold;
  font-size:34rpx;
  text-align: center;
}
.share-btn .content{
  margin-top:30rpx;
  font-size:30rpx;
  text-align: center;
}
.share-btn button{
  position:absolute;
  bottom:0;
  left:0;
  width:100%;
  font-size: 36rpx;
  color:#fff;
  background:#ee4126;
  border-radius:0;
}
/*  确认支付弹框  */
.sure-pay{
  position:fixed;
  top:35%;
  left:50%;
  transform:translate(-50%,-50%);
  width:500rpx;
  height:282rpx;
  background:#fff;
  border-radius:6rpx;
  z-index:3001;
}
.sure-pay .title{
  display: flex;
  justify-content: center;
  align-items: center;
  width:100%;
  height:193rpx;
  font-weight: 600;
  font-size:34rpx;
  color: #333839;
}
.sure-pay .btns{
  display:flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  height:88rpx;
  border-top:solid 1rpx #e2e2e2;
}
.sure-pay .btns .form-1{
  width:50%;
  height:100%;
}
.sure-pay .btns .form-1 .way-1{
  position:relative;
  display:flex;
  justify-content: center;
  align-items: center;
  width:100%;
  height:100%;
  font-size:30rpx;
  color: #445354;
  border-right:solid 1rpx #e2e2e2;
}
.sure-pay .btns .form-1 .way-1 .pay-btn{
  position:absolute;
  top:0;
  left:0;
  background:transparent;
  width:100%;
  height:100%;
  font-size:30rpx;
  color: #445354;
  border:1rpx solid transparent;
}

.sure-pay .btns .form-2{
  width:50%;
  height:100%;
}

.sure-pay .btns .form-2 .way-2{
  position:relative;
  display:flex;
  justify-content: center;
  align-items: center;
  width:100%;
  height:100%;
  font-size:30rpx;
   color: #20b6be;
}
.sure-pay .btns .form-2 .way-2 .pay-btn{
  position:absolute;
  top:0;
  left:0;
  background:transparent;
  width:100%;
  height:100%;
  font-size:30rpx;
  color: #20b6be;
  background:transparent;
  border:1rpx solid transparent;
}
/* 蒙版  */
.mask{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:#000;
  opacity:0.5;
  z-index:3000;
}