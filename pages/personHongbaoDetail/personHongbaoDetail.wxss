.user-list {
    margin-top: 20rpx;
    box-sizing: border-box;
    width: 750rpx;
    background-color: #fff;
    padding: 0 45rpx;
}

.user-list .user-item {
    position: relative;
    z-index: 1;
    display: flex;
    box-sizing: border-box;
    padding: 24rpx 0;
    width: 660rpx;
    height: 158rpx;
    border-bottom: 1rpx solid #d9d9d9;
}

.user-list .user-item .item-avatar {
    margin-right: 20rpx;
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.user-list .user-item .item-content {
    flex: 1;
    overflow: hidden;
}

.user-item .item-content .item-nickname {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #333839;
}

.user-item .item-content .item-message {
    width: 100%;
    height: 33rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    color: #808080;
}

.user-item .item-reward {
    box-sizing: border-box;
    padding-top: 35rpx;
    height: 110rpx;
    /* line-height: 110rpx; */
    width: 120rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #ee4126;
}

.user-item .item-reward .icon {
    box-sizing: border-box;
    /* vertical-align: middle; */
    margin-left: 5rpx;
    /* display: inline-block; */
    display: block;
    width: 40rpx;
    height: 20rpx;
    line-height: 20rpx;
    border-radius: 5rpx;
    color: #ee4126;
    text-align: center;
    font-size: 16rpx;
    border: 1rpx solid #ee4126;
}

.user-item .item-amount {
    height: 110rpx;
    line-height: 110rpx;
    width: 120rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #ee4126;
}

.footer-btn {
    display: flex;
    position: fixed;
    z-index: 50;
    width: 750rpx;
    height: 100rpx;
    left: 0;
    bottom: 0;
    background: #fff;
    text-align: center;
}

.footer-btn .icon {
    display: block;
    margin: 16rpx auto 0;
    width: 36rpx;
    height: 36rpx;
}

.footer-btn .text {
    margin-top: 4rpx;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    color: #2b2b2b;
}

.receive .more {
    border-top: 1rpx solid #ccc;
    border-right: 1rpx solid #ccc;
    flex: 1;
    line-height: 1;
}

.receive .share {
    position: relative;
    z-index: 1;
    flex: 1;
    background-color: #fff;
    border-top: 1rpx solid #ccc;
    border-radius: 0;
    padding: 0;
    margin: 0;
    line-height: 1;
}

.receive .share .tip {
    position: absolute;
    z-index: 10;
    top: -73rpx;
    left: -15rpx;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 5rpx;
    color: #fff;
    background-color: #ee4126;
    font-size: 28rpx;
}

.receive .share .tip::after {
    position: absolute;
    z-index: 10;
    display: block;
    content: '';
    height: 0;
    width: 0;
    border: 15rpx solid transparent;
    border-top-color: #ee4126;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
}

.receive .share::after {
    border: none;
}

.receive .share.no-share {
    opacity: 0.5;
}

.receive .received {
    width: 400rpx;
    background-color: #dcdcdc;
    line-height: 100rpx;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
}

.send .one-more-time {
    border-top: 1rpx solid #ccc;
    flex: 1;
    line-height: 1;
}

.send .sent {
    width: 488rpx;
    background-color: #ee4126;
    line-height: 100rpx;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    border-radius: 0;
}

.send .sent::after {
    border: none;
    border-radius: 0;
}

.submit-btn {
    width: 750rpx;
    height: 88rpx;
    background-color: #dcdcdc;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
    line-height: 88rpx;
}

.shadow {
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
    z-index: 1500;
}

.snatch-result {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translate(-50%, 0);
    width: 100%;
    height: 100%;
    z-index: 100;
}

.snatch-result .result-info {
    position: relative;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 936rpx;
    z-index: 2000;
}

.snatch-result .result-info .bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.snatch-result .result-info .amount-prefix {
    position: absolute;
    top: 275rpx;
    left: 0;
    width: 100%;
    margin: 0 auto;
    font-size: 24rpx;
    text-align: center;
    color: #a26418;
}

.snatch-result .result-info .amount-info {
    position: absolute;
    top: 320rpx;
    left: 50%;
    transform: translate(-50%, 0);
    text-align: center;
    box-sizing: border-box;
    min-width: 268rpx;
    height: 128rpx;
    /* border-radius: 68rpx;
    border: solid 1rpx rgba(238, 65, 38, 0.5); */
    padding: 0 25rpx;
}

.snatch-result .result-info .amount-info .amount {
    display: inline;
    font-size: 100rpx;
    font-weight: 600;
    color: #a30008;
}

.snatch-result .result-info .amount-info .amount-unit {
    display: inline;
    font-size: 24rpx;
    color: #a30008;
}

.snatch-result .result-info .title {
    position: absolute;
    top: 520rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 500rpx;
    font-size: 38rpx;
    font-weight: 600;
    line-height: 1.42;
    text-align: center;
    color: #ffd180;
    text-overflow: ellipsis;
    /* NOTEï¼šBOTH of the following are required for text-overflow */
    white-space: nowrap;
    overflow: hidden;
}

.snatch-result .result-info .title.title-2 {
    top: 630rpx;
}

.snatch-result .result-info .btn-share {
    position: absolute;
    top: 625rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 450rpx;
    height: 92rpx;
    border-radius: 46rpx;
    background-image: linear-gradient(to bottom, #feef00, #eaa900);
    font-size: 40rpx;
    font-weight: 600;
    line-height: 92rpx;
    text-align: center;
    color: #625118;
}

.snatch-result .result-info .btn-share::after {
    border: none;
}

.snatch-result .result-info cover-view.btn-share {
    background-color: #eeea00;
}

.snatch-result .result-info .btn-share .icon-share {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    padding-right: 20rpx;
}

.snatch-result .result-info .btn-share cover-image.icon-share {
    margin-right: 30rpx;
}

.snatch-result .result-info .remaining {
    position: absolute;
    top: 740rpx;
    left: 0;
    width: 100%;
    margin: 0 auto;
    font-size: 24rpx;
    letter-spacing: 0.8px;
    text-align: center;
    color: #fff;
}

.snatch-result .btn-close {
    position: absolute;
    top: 840rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 66rpx;
    height: 66rpx;
    z-index: 2000;
}

.snatch-result .result-info.received .message {
    position: absolute;
    top: 390rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 400rpx;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 1.23;
    text-align: center;
    color: #ffd180;
    white-space: pre-wrap;
}

.snatch-result .result-info.received .title {
    position: absolute;
    top: 550rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 400rpx;
    font-size: 38rpx;
    font-weight: 600;
    line-height: 1.42;
    text-align: center;
    color: #ffd180;
    white-space: pre-wrap;
}

.snatch-result .result-info.received .remaining {
    top: 700rpx;
}

/** actionSheet **/

.share-action-sheet {
    width: 750rpx;
    position: fixed;
    bottom: 0;
    z-index: 30;
    border: 1rpx solid #ccc;
    transform: translateY(366rpx);
    transition: all 0.3s ease;
}

.share-action-sheet.active {
    transform: translateY(0rpx);
    transition: all 0.3s ease;
}

.btn {
    height: 120rpx;
    line-height: 120rpx;
    background: #fff;
    font-size: 36rpx;
    text-align: center;
    color: #222;
    border-radius: 0;
}

.btn.share-btn {
    border-bottom: 1rpx solid #ccc;
}

.btn.share-btn.no-tap {
    color: #ccc;
}

.btn.share::after {
    border: none;
}
