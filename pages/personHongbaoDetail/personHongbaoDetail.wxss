.card-hongbao {
    position: relative;
    z-index: 1;
    padding-bottom: 155rpx;
    background-color: rgb(247, 247, 247);
}

.audio {
    position: absolute;
    z-index: 10;
    width: 80rpx;
    height: 80rpx;
    right: 20rpx;
    top: 850rpx;
}

.card-bg {
    display: block;
    width: 750rpx;
    height: 950rpx;
}

.card-info {
    display: flex;
    box-sizing: border-box;
    margin: 0 auto;
    padding: 20rpx 30rpx;
    position: relative;
    z-index: 1;
    width: 750rpx;
    height: 150rpx;
    /* border-radius: 10rpx; */
    background-color: rgba(255, 255, 255, 0.9);
    /* backdrop-filter: blur(10px); */
}

.card-info .info-avatar {
    margin-left: 15rpx;
    margin-right: 20rpx;
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.card-info .info-content {
    flex: 1;
    overflow: hidden;
}

.card-info .info-name {
    width: 100%;
    font-size: 38rpx;
    font-weight: 600;
    height: 50rpx;
    line-height: 50rpx;
    color: #333839;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.wish {
    width: 100%;
    font-size: 30rpx;
    font-weight: normal;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card-info .no-info {
    height: 200rpx;
    line-height: 200rpx;
    text-align: center;
    font-size: 28rpx;
    color: #b9b9b9;
}

