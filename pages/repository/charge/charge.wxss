.charge{
  display: flex;
  flex-direction: column;
  width:100%;
  height:100%;
}
.input-money{
  width:100%;
  height:230rpx;
  box-shadow: inset 0 -1px 0 0 #d9d9d9;
  background:#fff;
}
.input-money .input-money-tip{
  width:100%;
  margin-top:30rpx;
}
.input-money .input-money-tip text{
  margin-left:30rpx;
  font-size:26rpx;
  color: #2b2b2b;
}
.input-money .input-money-content{
  display: flex;
  align-items: center;
  width:100%;
  height:120rpx;
  margin-top:20rpx;
}
.input-money .input-money-content text{
  margin-left:25rpx;
  font-size:60rpx;
  color: #2b2b2b;
}
.input-money .input-money-content input{
  display: flex;
  flex: 1;
  height:100rpx;
  padding-left:20rpx;
  border-radius: 4rpx;
}
.charge-fee{
  width:100%;
  height:90rpx;
  margin-top:27rpx;
  background:#fff;
  box-shadow: inset 0 -1px 0 0 #d9d9d9;
}
.charge-fee text{
  line-height: 90rpx;
  margin-left:30rpx;
  font-size:28rpx;
  color: #2b2b2b;
}
.pay-money{
  margin:0 auto;
  width:650rpx;
  height:88rpx;
  margin-top:80rpx;
  text-align: center;
  line-height:88rpx;
  font-size:36rpx;
  color:#fff;
  background: #ee4126;
  border-radius: 8rpx;
}