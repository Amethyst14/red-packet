/* pages/userCenter/bountyMission/bountyMission.wxss */

page{
  background-color: rgb(247, 247, 247);
}


/* 红包兑换 */
.get-cash{
  width:100%;
  height:230rpx;
}

.input-money{
  width:100%;
  height:230rpx;
  box-shadow: 0 3px 8px 0 rgba(235, 235, 235, 0.3), inset 0 -1px 0 0 rgba(218, 218, 218, 0.5);
  background:#fff;
}
.input-money .input-money-tip{
  width:100%;
  padding-top: 30rpx;
}
.input-money .input-money-tip text{
  margin-left:30rpx;
  font-size:26rpx;
  color: #2b2b2b;
}
.input-money .input-money-content{
  display: flex;
  align-items: center;
  width:100%;
  height:120rpx;
  margin-top:20rpx;
}

.input-money .input-money-content input{
  display: flex;
  flex: 1;
  height:100rpx;
  padding-left:30rpx;
  border-radius: 4rpx;
}
/*  提现按钮  */
.submit-default{
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0 auto;
  width: 127rpx;
	height: 60rpx;
  margin-top:10rpx;
  margin-right: 30rpx;
  text-align: center;
  line-height:88rpx;
  border-radius:60rpx;
	background-color: #ffffff;
	border: solid 1rpx #dcdcdc;
  font-size: 28rpx;
	color: #dcdcdc;
}
.submit-active{
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0 auto;  
  width: 127rpx;
	height: 60rpx;
  margin-top:10rpx;
  margin-right: 30rpx;
  text-align: center;
  line-height:88rpx;
  border-radius:60rpx;
	background-color: #ee4126;
  font-size: 28rpx;
	color: white;
}