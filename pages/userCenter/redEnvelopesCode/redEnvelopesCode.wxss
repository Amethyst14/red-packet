page{
  background-color: rgb(247, 247, 247);
}

.get-cash{
  width:100%;
  height:100%;
}

.input-money{
  width:100%;
  height:230rpx;
  box-shadow: 0 3px 8px 0 rgba(235, 235, 235, 0.3), inset 0 -1px 0 0 rgba(218, 218, 218, 0.5);
  background:#fff;
}
.input-money .input-money-tip{
  width:100%;
  padding-top: 30rpx;
}
.input-money .input-money-tip text{
  margin-left:30rpx;
  font-size:26rpx;
  color: #2b2b2b;
}
.input-money .input-money-content{
  display: flex;
  align-items: center;
  width:100%;
  height:120rpx;
  margin-top:20rpx;
}

.input-money .input-money-content input{
  display: flex;
  flex: 1;
  height:100rpx;
  padding-left:30rpx;
  border-radius: 4rpx;
}
/*  提现按钮  */
.submit-default{
  margin:0 auto;
  width:650rpx;
  height:88rpx;
  margin-top:170rpx;
  text-align: center;
  line-height:88rpx;
  font-size:36rpx;
  color:#fff;
  background:#dcdcdc;
  border-radius:6rpx;
}
.submit-active{
  margin:0 auto;  
  width:650rpx;
  height:88rpx;
  margin-top:170rpx;
  text-align: center;
  line-height:88rpx;
  font-size:36rpx;
  color:#fff;
  background:#ee4126;
  border-radius:6rpx;
}