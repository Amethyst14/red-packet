page{
  background-color: rgb(247, 247, 247);
}

.userCenter-box{
  
}

/* 用户头像  绑定状态 */
.header-view{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 310rpx;
  flex-direction: column;
  background: white;
}

.header-image{
  margin-top: 20rpx;
  width: 128rpx;
	height: 128rpx;
  background: rgb(240, 240, 240);
  border-radius: 64rpx;
}

.header-view text{ 
  margin-top: 14rpx;
  margin-bottom: 10rpx;
  font-size: 34rpx;
	text-align: center;
	color: #2b2b2b;
}

.header-view button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 230rpx;
	height: 55rpx;
	border-radius: 55rpx;
	border: solid 1rpx rgba(235, 235, 235, 1);
  font-size: 24rpx;
	color: #808080;
  background-color: white;
}


/* 赏金任务 */
.bounty-mission-view{
  display: flex;
  height: 158rpx;
  padding: 20rpx;
}

.bounty-mission-view image{
  width: 100%;
  height: 100%;
  background-color: yellow;
}



.setting-view-tow{
  display: block;
  margin-top: 15rpx;
}




/* 电话 */
.footer-view{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  bottom: 50rpx;
}

.footer-view .footer-view-title{
  font-size: 24rpx;
	text-align: center;
	color: #7c7c7c;
}

.footer-view .footer-view-phone{
  margin-top: 7rpx;
  font-size: 24rpx;
	text-align: center;
	color: #cccccc;
}